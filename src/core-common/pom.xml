    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <reuseForks>false</reuseForks> <!-- This will make sure to spawn a fresh jvm for each test -->
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
